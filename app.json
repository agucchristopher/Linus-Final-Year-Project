{
  "expo": {
    "name": "LinusProject",
    "slug": "LinusProject",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "plugins": [
      [
        "@react-native-voice/voice",
        {
          "microphonePermission": "Allow MR. LINUS to access the microphone",
          "speechRecognitionPermission": "Allow MR. LINUS to securely recognize user speech"
        }
      ]
    ],
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.RECORD_AUDIO"
      ],
      "package": "com.devkay.LinusProject"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "11afe07e-a608-4313-ad66-138d7cf285fe"
      }
    }
  }
}
